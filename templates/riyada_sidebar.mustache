<script>
// Check user role and show appropriate sidebar
document.addEventListener('DOMContentLoaded', function() {
    // Check user role and capabilities by making an AJAX request
    fetch('{{config.wwwroot}}/theme/remui_kids/check_admin.php')
        .then(response => response.json())
        .then(data => {
            if (data.show_sidebar) {
                if (data.isadmin) {
                    // Show admin sidebar
                    showAdminSidebar();
                    document.body.classList.add('admin-user');
                } else if (data.isteacher || data.istrainee) {
                    // Hide admin sidebar and load trainee/teacher sidebar
                    hideAdminSidebar();
                    loadTraineeTeacherSidebar();
                    
                    if (data.isteacher) {
                        document.body.classList.add('teacher-user');
                    } else if (data.istrainee) {
                        document.body.classList.add('trainee-user');
                    }
                }
            } else {
                // Hide sidebar completely
                hideAllSidebars();
            }
        })
        .catch(error => {
            console.log('Could not check user role, hiding sidebar for security');
            hideAllSidebars();
        });
});

function showAdminSidebar() {
    const sidebar = document.getElementById('riyada-sidebar');
    if (sidebar) {
        sidebar.style.display = 'block';
        sidebar.style.visibility = 'visible';
        sidebar.style.opacity = '1';
        sidebar.style.transform = 'translateX(0)';
        sidebar.style.width = '280px';
    }
    
    const fab = document.querySelector('.riyada-fab');
    if (fab) {
        fab.style.display = 'block';
    }
    
    initializeSidebarScroll();
    
    // Apply active page highlighting for admin after a short delay
    setTimeout(() => {
        const currentPath = window.location.pathname;
        const currentPage = getCurrentPage(currentPath);
        
        console.log('Admin - Current path:', currentPath);
        console.log('Admin - Current page:', currentPage);
        
        document.querySelectorAll('.riyada-nav-link').forEach(link => {
            link.classList.remove('active');
        });
        
        const activeLink = document.querySelector(`[data-page="${currentPage}"]`);
        console.log('Admin - Active link found:', activeLink);
        if (activeLink) {
            activeLink.classList.add('active');
            console.log('Admin - Added active class to:', activeLink);
        } else {
            console.log('Admin - No active link found for page:', currentPage);
            // Debug: List all available data-page attributes
            const allLinks = document.querySelectorAll('[data-page]');
            console.log('Admin - Available data-page attributes:', Array.from(allLinks).map(link => link.getAttribute('data-page')));
        }
    }, 100);
}

function hideAdminSidebar() {
    const sidebar = document.getElementById('riyada-sidebar');
    if (sidebar) {
        sidebar.style.display = 'none';
        sidebar.style.visibility = 'hidden';
        sidebar.style.opacity = '0';
        sidebar.style.transform = 'translateX(-100%)';
        sidebar.style.width = '0';
    }
}

function hideAllSidebars() {
    const sidebar = document.getElementById('riyada-sidebar');
    if (sidebar) {
        sidebar.style.display = 'none !important';
        sidebar.style.visibility = 'hidden';
        sidebar.style.opacity = '0';
    }
    
    const fab = document.querySelector('.riyada-fab');
    if (fab) {
        fab.style.display = 'none';
    }
    
    // Adjust main content
    const mainContent = document.querySelector('.main-content, #page-wrapper, .container-fluid');
    if (mainContent) {
        mainContent.style.marginLeft = '0 !important';
        mainContent.style.width = '100% !important';
    }
    
    document.body.style.marginLeft = '0 !important';
}

function loadTraineeTeacherSidebar() {
    // Load the trainee/teacher sidebar template
    fetch('{{config.wwwroot}}/theme/remui_kids/render_trainee_sidebar.php')
        .then(response => response.text())
        .then(html => {
            // Insert the new sidebar HTML
            const sidebarContainer = document.querySelector('.riyada-sidebar-container');
            if (sidebarContainer) {
                sidebarContainer.innerHTML = html;
            } else {
                // Create new sidebar container
                const newSidebar = document.createElement('div');
                newSidebar.innerHTML = html;
                document.body.appendChild(newSidebar.firstElementChild);
            }
        })
        .catch(error => {
            console.log('Could not load trainee/teacher sidebar');
        });
}

function getCurrentPage(path) {
    // Admin pages
    if (path.includes('/theme/remui_kids/admin_dashboard.php')) {
        return 'admin-dashboard';
    } else if (path.includes('/my/') && !path.includes('/courses.php')) {
        return 'dashboard';
    } else if (path.includes('/enrollments.php')) {
        return 'enrollments';
    } else if (path.includes('/courses.php') || path.includes('/my/courses.php')) {
        return 'courses';
    } else if (path.includes('/course/index.php')) {
        return 'learning-paths';
    } else if (path.includes('/user_management.php')) {
        return 'user-management';
    } else if (path.includes('/teachers.php')) {
        return 'teachers';
    } else if (path.includes('/user_details.php')) {
        return 'user-management';
    } else if (path.includes('/user/index.php?roleid=4')) {
        return 'master-trainers';
    } else if (path.includes('/badges/index.php')) {
        return 'certifications';
    } else if (path.includes('/mod/quiz/index.php')) {
        return 'assessments';
    } else if (path.includes('/schools.php')) {
        return 'schools';
    } else if (path.includes('/reportbuilder/index.php')) {
        if (path.includes('source=users')) {
            return 'roi-analysis';
        } else {
            return 'analytics';
        }
    } else if (path.includes('/admin/tool/analytics/index.php')) {
        return 'predictive-models';
    } else if (path.includes('/user/index.php')) {
        return 'community';
    } else if (path.includes('/competency/') && path.includes('competency_map')) {
        return 'competency-map';
    }
    return null;
}

// Initialize sidebar scroll functionality
function initializeSidebarScroll() {
    const sidebarNav = document.getElementById('riyada-sidebar-nav');
    const toggleBtn = document.getElementById('sidebar-toggle-btn');
    
    if (!sidebarNav || !toggleBtn) return;
    
    // Force scroll properties
    sidebarNav.style.overflowY = 'visible';
    sidebarNav.style.overflowX = 'hidden';
    sidebarNav.style.maxHeight = 'calc(100vh - 160px)';
    sidebarNav.style.scrollBehavior = 'smooth';
    
    // Ensure scrollbar is visible
    sidebarNav.style.scrollbarWidth = 'thin';
    sidebarNav.style.scrollbarColor = '#d1d5db #f9fafb';
    
    // Toggle button functionality
    toggleBtn.addEventListener('click', function() {
        const sidebar = document.getElementById('riyada-sidebar');
        const isCollapsed = sidebar.style.transform === 'translateX(-100%)';
        
        if (isCollapsed) {
            // Show sidebar
            sidebar.style.transform = 'translateX(0)';
            sidebar.style.transition = 'transform 0.3s ease';
            document.body.classList.remove('sidebar-hidden');
            toggleBtn.innerHTML = '<span class="riyada-fab-icon">‚Üí</span>';
        } else {
            // Hide sidebar
            sidebar.style.transform = 'translateX(-100%)';
            sidebar.style.transition = 'transform 0.3s ease';
            document.body.classList.add('sidebar-hidden');
            toggleBtn.innerHTML = '<span class="riyada-fab-icon">‚Üê</span>';
        }
    });
    
    // Auto-scroll to active item
    const activeLink = document.querySelector('.riyada-nav-link.active');
    if (activeLink) {
        setTimeout(() => {
            activeLink.scrollIntoView({
                behavior: 'smooth',
                block: 'center'
            });
        }, 100);
    }
    
    // Add scroll indicators
    updateScrollIndicators();
    sidebarNav.addEventListener('scroll', updateScrollIndicators);
    
    // Initialize scroll to top button
    initializeScrollToTop();
    
    // Debug: Check if scroll is working
    console.log('Sidebar scroll initialized:', {
        element: sidebarNav,
        scrollHeight: sidebarNav.scrollHeight,
        clientHeight: sidebarNav.clientHeight,
        canScroll: sidebarNav.scrollHeight > sidebarNav.clientHeight
    });
}

// Update scroll indicators
function updateScrollIndicators() {
    const sidebarNav = document.getElementById('riyada-sidebar-nav');
    if (!sidebarNav) return;
    
    const { scrollTop, scrollHeight, clientHeight } = sidebarNav;
    const isAtTop = scrollTop === 0;
    const isAtBottom = scrollTop + clientHeight >= scrollHeight - 5;
    
    // Add visual indicators for scroll state
    if (!isAtTop && !isAtBottom) {
        sidebarNav.style.boxShadow = 'inset 0 10px 10px -10px rgba(0,0,0,0.1), inset 0 -10px 10px -10px rgba(0,0,0,0.1)';
    } else if (!isAtTop) {
        sidebarNav.style.boxShadow = 'inset 0 10px 10px -10px rgba(0,0,0,0.1)';
    } else if (!isAtBottom) {
        sidebarNav.style.boxShadow = 'inset 0 -10px 10px -10px rgba(0,0,0,0.1)';
    } else {
        sidebarNav.style.boxShadow = 'none';
    }
}

// Initialize scroll to top functionality
function initializeScrollToTop() {
    const scrollToTopBtn = document.getElementById('scroll-to-top-btn');
    const sidebarNav = document.getElementById('riyada-sidebar-nav');
    
    if (!scrollToTopBtn || !sidebarNav) return;
    
    // Show/hide scroll to top button based on scroll position
    function toggleScrollToTop() {
        const { scrollTop } = sidebarNav;
        if (scrollTop > 100) {
            scrollToTopBtn.classList.add('visible');
        } else {
            scrollToTopBtn.classList.remove('visible');
        }
    }
    
    // Add scroll listener
    sidebarNav.addEventListener('scroll', toggleScrollToTop);
    
    // Scroll to top functionality
    scrollToTopBtn.addEventListener('click', function() {
        sidebarNav.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    });
    
    // Initial check
    toggleScrollToTop();
}
</script>
