<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-1">Teacher Status Management</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="teachers.php">Teachers</a></li>
                            <li class="breadcrumb-item"><a href="{{wwwroot}}/theme/remui_kids/teacher_view.php?id={{teacherid}}">{{teacher.firstname}} {{teacher.lastname}}</a></li>
                            <li class="breadcrumb-item active">Status Management</li>
                        </ol>
                    </nav>
                </div>
                <div class="btn-group">
                    <a href="{{wwwroot}}/theme/remui_kids/teacher_view.php?id={{teacherid}}" class="btn btn-outline-info">
                        <i class="fas fa-eye"></i> View Teacher
                    </a>
                    <a href="teacher_edit.php?id={{teacherid}}" class="btn btn-outline-primary">
                        <i class="fas fa-edit"></i> Edit Teacher
                    </a>
                    <a href="teachers.php" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Teachers
                    </a>
                </div>
            </div>
        </div>
    </div>

    {{#success_message}}
