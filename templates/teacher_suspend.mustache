        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
    {{/error_message}}

    <div class="row">
        <!-- Teacher Status Card -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-{{status_class}} text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-{{#is_suspended}}lock{{/is_suspended}}{{^is_suspended}}check{{/is_suspended}}"></i> Current Status
                    </h5>
                </div>
                <div class="card-body text-center">
                    <div class="avatar-lg mx-auto mb-3">
                        <div class="avatar-title bg-{{status_class}} rounded-circle text-white display-4">
                            {{teacher.firstname.0}}{{teacher.lastname.0}}
                        </div>
                    </div>
                    <h4 class="mb-2">{{teacher.firstname}} {{teacher.lastname}}</h4>
                    <span class="badge badge-{{status_class}} badge-lg mb-3">{{status_text}}</span>
                    <div class="text-muted small">
                        <div><strong>Email:</strong> {{teacher.email}}</div>
                        <div><strong>Last Access:</strong> {{last_access}}</div>
                        <div><strong>Courses:</strong> {{courses_count}}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Management Form -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cogs"></i> Status Management
                    </h5>
                </div>
                <div class="card-body">
                    {{#is_suspended}}
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Teacher is currently suspended.</strong> They cannot access the system or their courses.
                    </div>
                    {{/is_suspended}}
                    {{^is_suspended}}
                    <div class="alert alert-success" role="alert">
                        <i class="fas fa-check-circle"></i>
                        <strong>Teacher is currently active.</strong> They have full access to the system.
                    </div>
                    {{/is_suspended}}

                    <form method="POST" action="">
                        <input type="hidden" name="sesskey" value="{{sesskey}}">
                        
                        <div class="form-group">
                            <label for="action_type">Select Action</label>
                            <select class="form-control" id="action_type" name="action_type" required>
                                {{#is_suspended}}
                                <option value="activate">Activate Teacher</option>
                                {{/is_suspended}}
                                {{^is_suspended}}
                                <option value="suspend">Suspend Teacher</option>
                                {{/is_suspended}}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="reason">Reason (Optional)</label>
                            <textarea class="form-control" id="reason" name="reason" rows="3" 
                                      placeholder="Enter reason for this action..."></textarea>
                        </div>

                        {{#is_suspended}}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Activation will:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Restore full system access</li>
                                <li>Allow access to assigned courses</li>
                                <li>Enable login capabilities</li>
                            </ul>
                        </div>
                        {{/is_suspended}}
                        {{^is_suspended}}
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Suspension will:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Block system access</li>
                                <li>Prevent course access</li>
                                <li>Disable login capabilities</li>
                                <li>Preserve all data and assignments</li>
                            </ul>
                        </div>
                        {{/is_suspended}}

                        <div class="d-flex justify-content-end">
                            <a href="teachers.php" class="btn btn-secondary mr-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            {{#is_suspended}}
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-user-check"></i> Activate Teacher
                            </button>
                            {{/is_suspended}}
                            {{^is_suspended}}
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-user-lock"></i> Suspend Teacher
                            </button>
                            {{/is_suspended}}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    {{#recent_activity.length}}
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-history"></i> Recent Activity (Last 30 Days)
                    </h5>
                </div>
                <div class="card-body">
                    {{#recent_activity}}
                    <div class="d-flex align-items-center mb-3 p-3 border rounded">
                        <div class="flex-grow-1">
                            <h6 class="mb-1">{{action}}</h6>
                            {{#coursename}}
                            <small class="text-muted">Course: {{coursename}}</small>
                            {{/coursename}}
                        </div>
                        <div class="ml-3 text-muted">
                            <small>{{timecreated}}</small>
                        </div>
                    </div>
                    {{/recent_activity}}
                </div>
            </div>
        </div>
    </div>
    {{/recent_activity.length}}
</div>

<script>
// Auto-dismiss alerts after 5 seconds
setTimeout(function() {
    var alerts = document.querySelectorAll('.alert');
    alerts.forEach(function(alert) {
        alert.style.transition = 'opacity 0.5s';
        alert.style.opacity = '0';
        setTimeout(function() {
            alert.style.display = 'none';
        }, 500);
    });
}, 5000);

// Confirmation for suspend action
document.addEventListener('DOMContentLoaded', function() {
    var actionTypeSelect = document.getElementById('action_type');
    if (actionTypeSelect) {
        actionTypeSelect.addEventListener('change', function() {
            if (this.value === 'suspend') {
                if (!confirm('Are you sure you want to suspend this teacher? This will prevent them from accessing the system.')) {
                    this.value = 'activate';
                }
            }
        });
    }
});
</script>
